<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 https://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>package-artifact</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.build.outputDirectory}</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>dev/boredhuman/glslang/**</include>
                <include>dev/boredhuman/exceptions/**</include>
            </includes>
            <excludes>
                <exclude>dev/boredhuman/glslang/CompiledModule.class</exclude>
            </excludes>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>target/gen/dev/boredhuman/glslang/CompiledModule.class</source>
            <outputDirectory>/</outputDirectory>
            <destName>dev/boredhuman/glslang/CompiledModule.class.bin</destName>
        </file>
    </files>
</assembly>